[user]
	email = austin.pray@mixpanel.com
	name = Austin Pray

[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	pager = delta
	autocrlf = input

[interactive]
	diffFilter = delta --color-only

[delta]
    features = line-numbers decorations
    whitespace-error-style = 22 reverse

[push]
	default = simple

[color]
	ui = true

#[color "diff"]
#	meta = yellow
#	frag = magenta bold
#	old = red bold
#	new = green bold
#	commit = yellow bold
#	whitespace = red reverse

[difftool]
	prompt = false

[diff]
	tool = vimdiff

[mergetool]
	prompt = false
	keepBackup = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[rerere]
	enabled = true
[rebase]
	autosquash = true
[pull]
	ff = only
